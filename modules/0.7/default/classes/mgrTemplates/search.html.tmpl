<div id="manager-actions">
    <span>{translate(#Action#)}: &nbsp;</span>
    <a class="action validate" title="Search" href="javascript:formSubmit('frm%MgrName%Search','searchsubmitted',1,1)">{translate(#Search#)}</a>
    <a class="action cancel" title="Cancel Search" href="{makeUrl(#list#,#%mgrName%#,#%moduleName%#)}">{translate(#Cancel#)}</a>
</div>
<div id="content">
    <div id="content-header">
        <h2>{translate(pageTitle)}</h2>
        <div class="message">{msgGet()}</div>
    </div>
    <form class="formalign" action="" method="post" name="frm%MgrName%Search" flexy:ignore id="frm%MgrName%Search">
        <h3>{translate(#Search Criteria#)}</h3>
        <fieldset class="inside">
            <input name="action" type="hidden" value="list" />

%field_html%

        </fieldset>
    </form>
    <div class="spacer"></div>
</div>
